<h1>Burgers: mySQL Sauce Edition</h1>

<div class="row">
  <div class="col-sm-6">
    <h2>Available Burgers</h2>
    <ul>
      {{#each burger}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-sm-6">
    <h2>DevouredBurgers</h2>
    <ul>
      {{#each burger}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div>
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>